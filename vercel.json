{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://sap-technologies-ug.onrender.com/api/$1"
    },
    {
      "source": "/((?!api|assets|images|_next|favicon.ico|vite.svg).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "sap-technologies.com"
        }
      ],
      "destination": "https://www.sap-technologies.com/:path*",
      "permanent": true
    }
  ]
}
